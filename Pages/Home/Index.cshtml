@page
@model FreshFarmMarketSecurity.Pages.Home.IndexModel
@{
    ViewData["Title"] = "Home";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<h2 class="mb-1">🌿 Member Profile</h2>
<p class="text-muted mb-0">Welcome to Fresh Farm Market</p>

<div class="profile-card">
    <div class="profile-row">
        <span class="profile-label">Full Name</span>
        <span class="profile-value">@Model.FullName</span>
    </div>
    <div class="profile-row">
        <span class="profile-label">Email</span>
        <span class="profile-value">@Model.Email</span>
    </div>
    <div class="profile-row">
        <span class="profile-label">Gender</span>
        <span class="profile-value">@Model.Gender</span>
    </div>
    <div class="profile-row">
        <span class="profile-label">Mobile No</span>
        <span class="profile-value">@Model.MobileNo</span>
    </div>
    <div class="profile-row">
        <span class="profile-label">Delivery Address</span>
        <span class="profile-value">@Model.DeliveryAddress</span>
    </div>
    <div class="profile-row">
        <span class="profile-label">Credit Card</span>
        <span class="profile-value">**** **** **** @Model.DecryptedCreditCard[^4..]</span>
    </div>

    <div class="mt-4">
        <span class="profile-label d-block mb-2">About Me</span>
        <div class="about-box">
            @Model.AboutMe
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.PhotoPath))
    {
        <div class="mt-4">
            <span class="profile-label d-block mb-2">Photo</span>
            <img src="@Model.PhotoPath" alt="Member Photo" class="profile-photo" />
        </div>
    }
</div>
