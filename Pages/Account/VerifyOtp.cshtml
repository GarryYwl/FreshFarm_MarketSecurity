@page
@model FreshFarmMarketSecurity.Pages.Account.VerifyOtpModel
@{
    ViewData["Title"] = "Verify OTP";
}

<h2>Verify OTP</h2>

@if (TempData["Info"] != null)
{
    <div class="alert alert-info">@TempData["Info"]</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Otp" class="form-label"></label>
        <input asp-for="Otp" class="form-control" />
        <span asp-validation-for="Otp" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-primary">Verify</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}